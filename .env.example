# Flash Arbitrage Bot Environment Variables
# Copy this file to .env and fill in your values

# ==================== Base Configuration ====================
FLASH_ARB_ACCOUNT_BALANCE=100
FLASH_ARB_MODE=simulation
# FLASH_ARB_SYMBOLS=BTCUSDT,ETHUSDT

# ==================== Exchange API Keys ====================
# Binance
FLASH_ARB_EXCHANGES_BINANCE_API_KEY=your_binance_api_key_here
FLASH_ARB_EXCHANGES_BINANCE_API_SECRET=your_binance_api_secret_here
FLASH_ARB_EXCHANGES_BINANCE_TESTNET=false

# OKX
FLASH_ARB_EXCHANGES_OKX_API_KEY=your_okx_api_key_here
FLASH_ARB_EXCHANGES_OKX_API_SECRET=your_okx_api_secret_here
FLASH_ARB_EXCHANGES_OKX_PASSPHRASE=your_okx_passphrase_here
FLASH_ARB_EXCHANGES_OKX_DEMO_TRADING=true

# ==================== Redis Configuration ====================
# FLASH_ARB_REDIS_URL=redis://localhost:6379

# ==================== Database Configuration ====================
# FLASH_ARB_DATABASE_URL=postgresql://flash_arb:password@localhost/flash_arb

# ==================== Logging ====================
# FLASH_ARB_LOGGING_LEVEL=INFO
